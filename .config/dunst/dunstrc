progress_bar_max_width = 300
# progress_bar_corner_radius = 3
# progress_bar_horizontal_alignment = center
indicate_hidden = yes
transparency = 0
separator_height = 2
padding = 8
horizontal_padding = 8
text_icon_padding = 0
frame_width = 1
