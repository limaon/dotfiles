# See dunst(5) for all configuration options

[global]
### Display ###
monitor = 0
follow = mouse
enable_posix_regex = true

### Geometry ###
width = 250
height = (72, 300) # (min, max)
origin = top-right
offset = (12, 26)
scale = 0
