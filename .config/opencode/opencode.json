{
  "$schema": "https://opencode.ai/config.json",
  "username": "limaon",
  "theme": "solarized-osaka",
  "autoupdate": true,
  "snapshot": false,
  "plugin": [
    "opencode-gemini-auth@latest",
    "@nick-vi/opencode-type-inject@1.3.1",
    "@franlol/opencode-md-table-formatter@0.0.3",
    "@mohak34/opencode-notifier@latest"
  ],
  "instructions": ["./AGENTS.md"],
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true
    },
    "diff_style": "auto"
  },
  "tools": {
    "bash": true,
    "read": true,
    "write": true,
    "edit": true,
    "glob": true,
    "grep": true,
    "list": true,
    "lsp": true,
    "patch": true,
    "skill": true,
    "webfetch": true,
    "task": true,
    "todowrite": true,
    "todoread": true,
    "question": true
  },
  "permission": {
    "bash": "allow",
    "edit": "allow",
    "write": "allow",
    "read": "allow",
    "grep": "allow",
    "glob": "allow",
    "list": "allow",
    "lsp": "allow",
    "patch": "allow",
    "skill": "allow",
    "todowrite": "allow",
    "todoread": "allow",
    "webfetch": "deny",
    "question": "allow"
  },
  "provider": {
    "zai-coding-plan": {
      "options": {
        "baseURL": "https://api.z.ai/api/coding/paas/v4"
      }
    },
    "google": {
      "npm": "@ai-sdk/google",
      "models": {
        "gemini-3-pro-preview": {
          "id": "gemini-3-pro-preview",
          "name": "Gemini 3 Pro",
          "release_date": "2025-11-18",
          "reasoning": true,
          "limit": { "context": 1000000, "output": 64000 },
          "cost": { "input": 2, "output": 12, "cache_read": 0.2 },
          "modalities": {
            "input": ["text", "image", "video", "audio", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "low": {
              "options": {
                "thinkingConfig": {
                  "thinkingLevel": "low",
                  "includeThoughts": true
                }
              }
            },
            "medium": {
              "options": {
                "thinkingConfig": {
                  "thinkingLevel": "medium",
                  "includeThoughts": true
                }
              }
            },
            "high": {
              "options": {
                "thinkingConfig": {
                  "thinkingLevel": "high",
                  "includeThoughts": true
                }
              }
            }
          }
        },
        "gemini-3-flash": {
          "id": "gemini-3-flash",
          "name": "Gemini 3 Flash",
          "release_date": "2025-12-17",
          "reasoning": true,
          "limit": { "context": 1048576, "output": 65536 },
          "cost": { "input": 0.5, "output": 3, "cache_read": 0.05 },
          "modalities": {
            "input": ["text", "image", "video", "audio", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "minimal": {
              "options": {
                "thinkingConfig": {
                  "thinkingLevel": "minimal",
                  "includeThoughts": true
                }
              }
            },
            "low": {
              "options": {
                "thinkingConfig": {
                  "thinkingLevel": "low",
                  "includeThoughts": true
                }
              }
            },
            "medium": {
              "options": {
                "thinkingConfig": {
                  "thinkingLevel": "medium",
                  "includeThoughts": true
                }
              }
            },
            "high": {
              "options": {
                "thinkingConfig": {
                  "thinkingLevel": "high",
                  "includeThoughts": true
                }
              }
            }
          }
        },
        "gemini-2.5-flash-lite": {
          "id": "gemini-2.5-flash-lite",
          "name": "Gemini 2.5 Flash Lite",
          "reasoning": false
        }
      }
    },
    "cliproxy": {
      "npm": "@ai-sdk/anthropic",
      "options": {
        "baseURL": "https://api.vibe-dev.web.id/v1",
        "apiKey": "{env:CLIPROXY_API_KEY}"
      },
      "models": {
        "claude-sonnet-4-5-thinking": {
          "name": "Claude Sonnet 4.5 Thinking [AG Cliproxy]",
          "limit": { "context": 200000, "output": 64000 },
          "modalities": {
            "input": ["text", "image", "pdf"],
            "output": ["text"]
          },
          "variants": {
            "high": { "reasoningEffort": "high", "textVerbosity": "high" }
          }
        }
      }
    },
    "minimax": {
      "npm": "@ai-sdk/anthropic",
      "options": {
        "baseURL": "https://api.minimax.io/anthropic/v1",
        "apiKey": "{env:MINIMAX_API_KEY}"
      },
      "models": {
        "MiniMax-M2.1": {
          "name": "MiniMax-M2.1 (faiz)"
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true,
      "timeout": 60000
    },
    "web-search-prime": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_search_prime/mcp",
      "headers": { "Authorization": "Bearer {env:Z_AI_API_KEY}" },
      "enabled": true
    },
    "web-reader": {
      "type": "remote",
      "url": "https://api.z.ai/api/mcp/web_reader/mcp",
      "headers": { "Authorization": "Bearer {env:Z_AI_API_KEY}" },
      "enabled": true
    },
    "zai-mcp-server": {
      "type": "local",
      "command": ["npx", "-y", "@z_ai/mcp-server"],
      "environment": {
        "Z_AI_API_KEY": "{env:Z_AI_API_KEY}",
        "Z_AI_MODE": "ZAI"
      },
      "enabled": true,
      "timeout": 60000
    },
    "next-devtools": {
      "type": "local",
      "command": ["npx", "-y", "next-devtools-mcp@latest"],
      "enabled": true,
      "timeout": 60000
    },
    "firecrawl-mcp": {
      "type": "local",
      "command": ["npx", "-y", "firecrawl-mcp"],
      "environment": { "FIRECRAWL_API_KEY": "{env:FIRECRAWL_API_KEY}" },
      "enabled": true,
      "timeout": 60000
    },
    "morph-mcp": {
      "type": "local",
      "command": ["npx", "-y", "@morphllm/morphmcp"],
      "environment": {
        "MORPH_API_KEY": "{env:MORPH_API_KEY}",
        "ENABLED_TOOLS": "edit_file,warpgrep_codebase_search"
      },
      "enabled": true,
      "timeout": 60000
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?tools=web_search_exa,get_code_context_exa,crawling_exa,company_research_exa,linkedin_search_exa,deep_researcher_start,deep_researcher_check",
      "enabled": false,
      "timeout": 60000,
      "headers": { "EXA_API_KEY": "{env:EXA_API_KEY}" }
    },
    "supabase": {
      "type": "remote",
      "url": "https://mcp.supabase.com/mcp?project_ref=zxyequaeestijzerrcrx&features=docs%2Caccount%2Cdatabase%2Cdebugging%2Cdevelopment%2Cfunctions%2Cbranching%2Cstorage",
      "enabled": false,
      "timeout": 60000,
      "headers": { "Authorization": "Bearer {env:SUPABASE_KEY}" }
    }
  }
}
